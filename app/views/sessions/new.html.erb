<div class="container is-flex is-justify-content-center is-align-items-center" style="height: 100vh;">
  <div class="box" style="width: 400px;">
    <h2 class="title is-3 has-text-centered">Login</h2>

    <%= form_with(url: login_path, local: true) do |f| %>
      <% if flash[:error] %>
        <div class="notification is-danger is-light">
          <%= flash[:error] %>
        </div>
      <% end %>

      <div class="field">
        <label class="label"><%= f.label :email %></label>
        <div class="control">
          <%= f.email_field :email, class: "input", placeholder: "Enter your email" %>
        </div>
      </div>

      <div class="field">
        <label class="label"><%= f.label :password %></label>
        <div class="control">
          <%= f.password_field :password, class: "input", placeholder: "Enter your password" %>
        </div>
      </div>

      <div class="field">
        <div class="control">
          <%= f.submit "Log in", class: "button is-primary is-fullwidth" %>
        </div>
      </div>
    <% end %>

    <p class="has-text-centered">
      New user? <%= link_to "Sign up now!", signup_path, class: "has-text-link" %>
    </p>
  </div>
</div>
